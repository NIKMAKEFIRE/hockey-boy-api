{
    "name": "hockey-boy-api",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "pnpm run build && pnpm run watch",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "build": "prisma generate && pnpm tsc",
        "watch-ts": "tsc -w",
        "lint": "eslint src/*.ts",
        "lint:fix": "pnpm lint --fix",
        "format": "prettier --check --ignore-path .gitignore .",
        "format:fix": "prettier --write --ignore-path .gitignore .",
        "test": "dotenv -e .env.test pnpm jest",
        "e2e:migrate": "dotenv -e .env.test pnpm prisma migrate deploy",
        "e2e:up": "docker compose -p pricings-e2e -f ./docker-compose.e2e.yml up -d ",
        "e2e:down": "docker compose -p pricings-e2e -f ./docker-compose.e2e.yml down"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@prisma/client": "^4.14.0",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "nodemon": "^2.0.22",
        "prisma": "^4.14.0",
        "uuid": "^9.0.0",
        "zod": "^3.21.4",
        "zod-express-middleware": "^1.4.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.1",
        "@types/supertest": "^2.0.12",
        "@types/uuid": "^9.0.1",
        "@typescript-eslint/eslint-plugin": "^5.59.6",
        "@typescript-eslint/parser": "^5.59.6",
        "concurrently": "^8.0.1",
        "dotenv-cli": "^7.2.1",
        "eslint": "^8.40.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-import": "^2.27.5",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "lint-staged": "^13.2.2",
        "prettier": "^2.8.8",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4"
    }
}
